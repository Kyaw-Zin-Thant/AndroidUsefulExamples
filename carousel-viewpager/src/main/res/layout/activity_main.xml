<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.nikartm.carousel_viewpager.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/color_alternative_text"
        android:textSize="22sp"
        android:text="@string/choose_you_hero" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_carousel"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_gravity="bottom"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingBottom="16dp"
        android:paddingEnd="80dp"
        android:paddingStart="80dp"/>

    <Button
        android:id="@+id/btn_transform"
        android:text="@string/transform_carousel"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:onClick="onTransformCarousel"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

</LinearLayout>
